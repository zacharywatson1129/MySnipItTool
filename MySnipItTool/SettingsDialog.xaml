<Window
    x:Class="MySnipItTool.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MySnipItTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:MySnipItTool.Properties"
    Title="Settings"
    Width="332.927"
    Height="200"
    Background="#FFC7C7C7"
    FontFamily="Segoe UI"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="ToolBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Window.Resources>

    <StackPanel Orientation="Vertical">
        <TextBlock
            Margin="0,10,0,5"
            FontSize="20"
            Text="Settings"
            TextAlignment="Center" />
        <Separator />
        <StackPanel
            Name="delayStackPanel"
            Margin="0,10,0,0"
            Orientation="Horizontal">
            <TextBlock
                Margin="10,0,30,0"
                VerticalAlignment="Center"
                Text="Delay:"
                ToolTip="The time (in milliseconds) after the main window minimizes before the screenshot is taken." />
            <Slider
                Name="slider"
                Width="128"
                Margin="40,0,0,0"
                VerticalAlignment="Center"
                IsSnapToTickEnabled="True"
                Maximum="2000"
                Minimum="0"
                TickFrequency="250"
                TickPlacement="BottomRight" />
            <TextBlock
                Name="lblDelay"
                Margin="15,0,0,0"
                VerticalAlignment="Center"
                Text="{Binding ElementName=slider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                TextAlignment="Right" />
        </StackPanel>

        <StackPanel Margin="0,3,0,0" Orientation="Horizontal">
            <TextBlock
                Margin="10,0,0,0"
                Text="Show Crosshairs:"
                ToolTip="If checked, the crosshairs are shown when a screen snippet is being taken. If unchecked, those crosshairs are not shown." />
            <CheckBox
                x:Name="checkBoxCrosshairs"
                Margin="180,0,10,0"
                VerticalAlignment="Center"
                RenderTransformOrigin="-3.512,0.333" />
        </StackPanel>

        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Text="Crosshairs Color:" />
            <Button
                x:Name="btnCrosshairsColor"
                Width="20"
                Height="20"
                Margin="175,0,0,0"
                Background="Red"
                BorderBrush="Transparent"
                Click="btnCrosshairsColor_Click" />
        </StackPanel>
        <StackPanel Margin="0,5,0,10" Orientation="Horizontal">
            <Button
                Name="btnCancel"
                Width="50"
                Margin="190,0,0,0"
                Click="btnCancel_Click"
                FontSize="14">
                <TextBlock
                    Padding="3"
                    RenderTransformOrigin="-0.312,0.467"
                    Text="Cancel" />
            </Button>
            <Button
                Name="btnOk"
                Width="50"
                Margin="10,0,10,0"
                Click="btnOk_Click"
                FontSize="14">
                <TextBlock Padding="3" Text="OK" />
            </Button>
        </StackPanel>
    </StackPanel>
</Window>