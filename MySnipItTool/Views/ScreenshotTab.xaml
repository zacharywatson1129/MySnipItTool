<UserControl
    x:Class="MySnipItTool.ScreenshotTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MySnipItTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    Background="White"
    mc:Ignorable="d">
    <ScrollViewer
        x:Name="scrollViewer"
        HorizontalScrollBarVisibility="Visible"
        VerticalScrollBarVisibility="Visible">
        <Canvas
            Name="canvas"
            Width="300"
            Background="White"
            Cursor="Cross"
            FocusManager.IsFocusScope="True"
            MouseWheel="canvas_MouseWheel"
            PreviewMouseDown="imgControl_MouseDown"
            PreviewMouseMove="imgControl_MouseMove"
            PreviewMouseUp="imgControl_MouseUp">
            <Image Name="imgControl" RenderOptions.BitmapScalingMode="NearestNeighbor" />
        </Canvas>
    </ScrollViewer>
</UserControl>
