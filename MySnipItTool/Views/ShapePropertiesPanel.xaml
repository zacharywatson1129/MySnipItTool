<UserControl x:Class="MySnipItTool.Views.ShapePropertiesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MySnipItTool.Views"
             mc:Ignorable="d" Background="White" Height="200" Width="200">
    <TabControl>
        <TabItem Header="Border">
            <StackPanel Orientation="Vertical">
                <Label FontSize="16">Border Color</Label>
                <WindowsFormsHost Name="cpHolder" />
                <Label FontSize="16">Border Thickness</Label>
                <Slider Minimum="1" Maximum="10"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Fill">
            <StackPanel Orientation="Vertical">
                <Label FontSize="16">Shape Fill Color</Label>
                <WindowsFormsHost Name="cpHolder2" />
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>
