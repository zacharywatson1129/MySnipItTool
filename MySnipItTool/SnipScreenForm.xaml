<Window x:Class="MySnipItTool.SnipScreenForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySnipItTool"
        mc:Ignorable="d" AllowsTransparency="True"
        Title="SnipScreenForm" Cursor="Cross" Loaded="Window_Loaded"
          WindowState="Maximized"
        WindowStyle="None" Background="#01000000">
        <!--MouseDown="MouseDown_Event" MouseMove="MouseMove_Event" MouseUp="MouseUp_Event"-->

    <Canvas Name="canvas" Background="#01000000" FocusManager.IsFocusScope="True"

            MouseDown="MouseDown_Event" MouseMove="MouseMove_Event" 
            MouseUp="MouseUp_Event">
        <Rectangle Fill="#30000000" Width="10" Height="10" StrokeThickness="1" x:Name="rectLeft" />
        <Rectangle Fill="#30000000" Width="10" Height="10" StrokeThickness="1" x:Name="rectRight"/>
        <Rectangle Fill="#30000000" StrokeThickness="1" x:Name="rectTop" />
        <Rectangle Fill="#30000000" StrokeThickness="1" x:Name="rectBottom" />
    </Canvas>
</Window>
